{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.hbs",
        "outDir": "dist",
        "watchAssets": true
      },
      {
        "include": "i18n/**/*",
        "outDir": "dist"
      },
      {
        "include": "common/mail/templates/**/*",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}