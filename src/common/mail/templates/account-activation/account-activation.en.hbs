    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%">
      <tr>
        <td align="center" style="padding: 30px 20px;">
          <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" style="background-color: #1a1d24; border-radius: 6px; padding: 40px;">
            
            <!-- Title -->
            <tr>
              <td style="color: #ffffff; font-size: 28px; font-weight: bold; text-align: center; padding-bottom: 20px;">
                Welcome to OneLesson!
              </td>
            </tr>

            <!-- Greeting -->
            <tr>
              <td style="color: #e8e9ed; font-size: 16px; line-height: 24px; padding-bottom: 20px;">
                Hello <strong>{{firstName}}</strong>,
              </td>
            </tr>

            <!-- Main message -->
            <tr>
              <td style="color: #b5b6ba; font-size: 16px; line-height: 24px; padding-bottom: 30px;">
                Thank you for signing up for OneLesson. To complete your registration and activate your account, 
                please click the button below.
              </td>
            </tr>

            <!-- Activation button -->
            <tr>
              <td align="center" style="padding-bottom: 30px;">
                <a href="{{activationUrl}}" 
                   style="display: inline-block; padding: 16px 32px; background-color: #7b83ff; color: #ffffff; 
                          text-decoration: none; border-radius: 6px; font-size: 16px; font-weight: bold;">
                  Activate My Account
                </a>
              </td>
            </tr>

            <!-- Separator -->
            <tr>
              <td style="border-top: 1px solid #2a2d35; padding: 20px 0;">
              </td>
            </tr>

            <!-- Alternative link -->
            <tr>
              <td style="color: #898a8f; font-size: 14px; line-height: 20px; padding-bottom: 20px;">
                If the button doesn't work, copy and paste this link into your browser:
              </td>
            </tr>
            <tr>
              <td style="padding-bottom: 30px;">
                <a href="{{activationUrl}}" 
                   style="color: #7b83ff; font-size: 14px; word-break: break-all; text-decoration: none;">
                  {{activationUrl}}
                </a>
              </td>
            </tr>

            <!-- Expiration warning -->
            <tr>
              <td style="background-color: #2a2d35; border-left: 4px solid #7b83ff; padding: 16px; border-radius: 4px; margin-bottom: 20px;">
                <p style="color: #e8e9ed; font-size: 14px; line-height: 20px; margin: 0;">
                  <strong>‚è∞ Important:</strong> This link will expire in <strong>{{expiresIn}} hours</strong>. 
                  If you don't activate your account before then, you'll need to request a new activation link.
                </p>
              </td>
            </tr>

            <!-- Security note -->
            <tr>
              <td style="color: #898a8f; font-size: 13px; line-height: 18px; padding-top: 20px; border-top: 1px solid #2a2d35;">
                <strong>üîí Security note:</strong> If you didn't create this account, you can safely ignore this email. 
                The account won't be activated without clicking the activation link.
              </td>
            </tr>

          </table>
        </td>
      </tr>
    </table>