# ==================== APPLICATION ====================
NODE_ENV=local
PORT=3000

# ==================== I18N ====================
I18N_FALLBACK_LANGUAGE=en
I18N_PATH=src/i18n/

# ==================== DATABASE (PostgreSQL/MySQL/MariaDB) ====================
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=dev_user
DB_PASSWORD=dev_password
DB_DATABASE=myapp_dev
DB_SSL=false
DB_SYNCHRONIZE=true
DB_LOGGING=true

# ==================== MONGODB ====================
MONGODB_URI=mongodb://localhost:27017/myapp_dev
MONGODB_DATABASE=myapp_dev
MONGODB_USE_NEW_URL_PARSER=true
MONGODB_USE_UNIFIED_TOPOLOGY=true

# ==================== REDIS ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# ==================== JWT ====================
JWT_SECRET=SuperSecretKey123!@#MinLength32Chars!!!ajksdhbkas
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=RefreshSecretKey456$%^MinLength32Chars!!!
JWT_REFRESH_EXPIRES_IN=7d

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# ==================== RATE LIMITING ====================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=10

# ==================== FILE UPLOAD ====================
MAX_FILE_SIZE=5242880

# ==================== LOGGING ====================
LOG_LEVEL=debug

# ==================== EMAIL (OPCIONAL) ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@myapp.com

# ==================== URLS  ====================
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3000/api